{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "outDir": "./out"
  },
  "include": [
    "**/*.ts",
    ".eslintrc.cjs",
  ],
  "exclude": ["node_modules"]
}
